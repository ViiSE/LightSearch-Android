<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">40dp</item>
        <item name="android:actionBarSize">40dp</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
<!--        <item name="android:navigationBarColor">@color/colorPrimary</item>-->
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="FragmentBindingContainerTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <declare-styleable name="SwipeableViewPager">
        <attr name="isSwipe" format="boolean"/>
    </declare-styleable>

    <style name="FullscreenFragmentDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
<!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="FSDialogTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/navBarColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="windowActionBar">true</item>
    </style>

</resources>
