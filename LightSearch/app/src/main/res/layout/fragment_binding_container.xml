<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:activity="ru.viise.lightsearch.fragment.ContainerFragment"
    android:orientation="vertical"
    android:id="@+id/fragment_container"
    android:background="@color/background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayoutBindCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/FragmentBindingContainerTabText"
        app:tabTextColor="@color/tabTextColor"
        app:tabIndicatorColor="@color/tabIndicatorColor"
        app:tabSelectedTextColor="@color/tabTextSelectedColor"
        android:background="@color/tabColor"
        app:tabIndicatorHeight="3dp"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPagerBindCon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>